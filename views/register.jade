extends layout

    h2.page-header Register
    p Please register using the form below 
    ul.errors
        if errors
            each error, i in errors
                div.alert.alert-danger #{error.msg}
    form(method='post', action='/users/register',
     enctype='multipart/form-data')
        .form-group
        label Name
        input.form-contol(name='name', type='text', placeholder= 'Enter name')
        .form-group
        label Email
        input.form-contol(name='email', type='email', placeholder= 'Enter email')
        .form-group
        label Username
        input.form-contol(name='username', type='text', placeholder= 'Enter Username')
        .form-group
        label Password
        input.form-contol(name='password', type='password', placeholder= 'Enter password')
        .form-group
        label Confirm Password
        input.form-contol(name='password2', type='password', placeholder= 'Confirm password')
        .form-group
        label Profile Image
        input.form-contol(name='profileimage', type='file', )
        input btn.btn-primary(type='submit', name='submit', value='Register')

.container
!=message()
block content 


script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
script(src='javascripts/bootstrap.js')
    